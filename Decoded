#NoEnv
SetWorkingDir %A_ScriptDir%
CoordMode, Mouse, Window
SendMode Input
#SingleInstance Force
SetTitleMatchMode 2
#WinActivateForce
SetControlDelay 1
SetWinDelay 0
SetKeyDelay -1
SetMouseDelay -1
SetBatchLines -1
Macro1:
OnMessage(0x53, "OnHelp")
Gui +OwnDialogs
OnMessage(0x44, "OnMsgBox")
MsgBox 0x46003, Welcome!, Welcome to Growtopia Autofarm Made by GtGtuber.
OnMessage(0x44, "")
IfMsgBox Yes, {
Run, "https://www.youtube.com/channel/UCAXD_QeK2rQ9xLKW2KhvELw"
} Else IfMsgBox No, {
} Else IfMsgBox Cancel, {
ExitApp
}
OnHelp() {
Help()
}
OnMsgBox() {
DetectHiddenWindows, On
Process, Exist
If (WinExist("ahk_class #32770 ahk_pid " . ErrorLevel)) {
ControlSetText Button1, Visit Channel
ControlSetText Button2, Continue
ControlSetText Button3, Exit
ControlSetText Button4, Show Hotkeys
}
}
InputBox, numb, Number Of Windows, How Many windows do you have? (1-8), , , 130
ayy := 0
While ayy < numb
{
ayy += 1
MsgBox, 262144, , Select Window and press F7
Counter()
MsgBox, 262144, , Window Selected, 2
}
InputBox, mode, Choose Mode, Use for BFG or FARMING? :   BFG (1)    /    Farming (2), , , 130
If (mode="1")
{
bfg()
}
If (mode="2")
{
farm()
}
Return
Counter()
{
global
If ayy = 1
{
KeyWait, F7
KeyWait, F7, D
WinGet, id1, ID, A
}
If ayy = 2
{
KeyWait, F7
KeyWait, F7, D
WinGet, id2, ID, A
}
If ayy = 3
{
KeyWait, F7
KeyWait, F7, D
WinGet, id3, ID, A
}
If ayy = 4
{
KeyWait, F7
KeyWait, F7, D
WinGet, id4, ID, A
}
If ayy = 5
{
KeyWait, F7
KeyWait, F7, D
WinGet, id5, ID, A
}
If ayy = 6
{
KeyWait, F7
KeyWait, F7, D
WinGet, id6, ID, A
}
If ayy = 7
{
KeyWait, F7
KeyWait, F7, D
WinGet, id7, ID, A
}
If ayy = 8
{
KeyWait, F7
KeyWait, F7, D
WinGet, id8, ID, A
}
}
bfg()
{
global
InputBox, option1, Number of Empty Spaces, How many empty spaces does the bfg have? (1-2), , , 130
If (option1="1")
{
mouse()
delay()
MsgBox, 262144, , Press F12 to Pause/Resume and F10 to exit program
bfg1()
}
If (option1="2")
{
mouse2()
delay()
MsgBox, 262144, , Press F12 to Pause/Resume and F10  to exit program
bfg2()
}
}
mouse()
{
global
MsgBox, 262144, ,
    (LTrim
    Select mouse position by Pressing F7
    Use Normal Zoom (kinda zoomed in or default) and remove mouse from screen
    Or it will not work properly
)
KeyWait, F7
KeyWait, F7, D
MouseGetPos, X, Y
}
