delay()
{
global
InputBox, delay, Set Delay for punching, Set Time to hold down Space Bar (in ms) Default: 1500 (Recommended 2300 for bfg with 2), , , 160, , , , , 1500
}
mouse2()
{
global
MsgBox, 262144, ,
    (LTrim
    Select first mouse position by Pressing F7
    Use Normal Zoom (kinda zoomed in) and remove mouse from screen
    Or it will not work properly
)
KeyWait, F7
KeyWait, F7, D
MouseGetPos, X, Y
MsgBox, 262144, ,
    (LTrim
    Select 2nd mouse position by Pressing F7
    (Use Normal Zoom or it will not work)
)
KeyWait, F7
KeyWait, F7, D
MouseGetPos, X2, Y2
}
