farm()
{
global
direction()
punchdelay()
movedelay()
MsgBox, 262144, , Press F12 to Pause/Resume and F10 to exit program
farming()
}
movedelay()
{
global
If (direc="1")
{
InputBox, move, Set Delay for moving, Set Time to hold down the Left Key (in ms)   Default: 160, , , 130, , , , , 160
}
If (direc="2")
{
InputBox, move, Set Delay for moving, Set Time to hold down the Right Key (in ms)  Default: 160, , , 130, , , , , 160
}
}
direction()
{
global
InputBox, direc, Select Direction, In what direction do you want to move? :    Left (1)    /    Right (2), , 450, 130
}
farming()
{
global
Loop
{
If direc != 1
{
If direc != 2
{
MsgBox, 0, , The value can be either 1 or 2
InputBox, direc, Select Direction, In what direction do you want to move? :   Left(2)   /  Right (1), , 400, 130
movedelay()
}
}
ControlSend, , {Space Down}, ahk_id %id1%
ControlSend, , {Space Down}, ahk_id %id2%
ControlSend, , {Space Down}, ahk_id %id3%
ControlSend, , {Space Down}, ahk_id %id4%
ControlSend, , {Space Down}, ahk_id %id5%
ControlSend, , {Space Down}, ahk_id %id6%
ControlSend, , {Space Down}, ahk_id %id7%
ControlSend, , {Space Down}, ahk_id %id8%
Sleep, %punch%
ControlSend, , {Space Up}, ahk_id %id1%
ControlSend, , {Space Up}, ahk_id %id2%
ControlSend, , {Space Up}, ahk_id %id3%
ControlSend, , {Space Up}, ahk_id %id4%
ControlSend, , {Space Up}, ahk_id %id5%
ControlSend, , {Space Up}, ahk_id %id6%
ControlSend, , {Space Up}, ahk_id %id7%
ControlSend, , {Space Up}, ahk_id %id8%
Sleep, 10
If direc = 2
{
ControlSend, , {Right Down}, ahk_id %id1%
ControlSend, , {Right Down}, ahk_id %id2%
ControlSend, , {Right Down}, ahk_id %id3%
ControlSend, , {Right Down}, ahk_id %id4%
ControlSend, , {Right Down}, ahk_id %id5%
ControlSend, , {Right Down}, ahk_id %id6%
ControlSend, , {Right Down}, ahk_id %id7%
ControlSend, , {Right Down}, ahk_id %id8%
Sleep, %move%
ControlSend, , {Right Up}, ahk_id %id1%
ControlSend, , {Right Up}, ahk_id %id2%
ControlSend, , {Right Up}, ahk_id %id3%
ControlSend, , {Right Up}, ahk_id %id4%
ControlSend, , {Right Up}, ahk_id %id5%
ControlSend, , {Right Up}, ahk_id %id6%
ControlSend, , {Right Up}, ahk_id %id7%
ControlSend, , {Right Up}, ahk_id %id8%
}
If direc = 1
{
ControlSend, , {Left Down}, ahk_id %id1%
ControlSend, , {Left Down}, ahk_id %id2%
ControlSend, , {Left Down}, ahk_id %id3%
ControlSend, , {Left Down}, ahk_id %id4%
ControlSend, , {Left Down}, ahk_id %id5%
ControlSend, , {Left Down}, ahk_id %id6%
ControlSend, , {Left Down}, ahk_id %id7%
ControlSend, , {Left Down}, ahk_id %id8%
Sleep, %move%
ControlSend, , {Left Up}, ahk_id %id1%
ControlSend, , {Left Up}, ahk_id %id2%
ControlSend, , {Left Up}, ahk_id %id3%
ControlSend, , {Left Up}, ahk_id %id4%
ControlSend, , {Left Up}, ahk_id %id5%
ControlSend, , {Left Up}, ahk_id %id6%
ControlSend, , {Left Up}, ahk_id %id7%
ControlSend, , {Left Up}, ahk_id %id8%
}
}
}
punchdelay()
{
global
InputBox, punch, Set Delay for punching, Set Time to hold down Space Bar (in ms)   Default: 1500, , , 130, , , , , 1500
}
Help()
{
_TXT =
(
General Hotkeys:
    - Exit: F10
    - Pause / Resume : F12
    - Restart / Reload Program : ALT + R
    - Show this menu : ALT + H
    
    
BFG Hotkeys:
    
    1 Free Space:
    	- Change Punching Delay : ALT + D
    	- Change Mouse Location : ALT + 1
    
    2 Free Spaces:
    	- Change Punching Delay : ALT + D
    	- Change Mouse Location : ALT + 2
    
    
Farming Hotkeys:
    - Change Punching Delay : F1
    - Change Moving Delay : F2
    - Change Direction : F3
)
Gui, Font, s10
Gui, Add, Text, ,%_TXT%
Gui, Add, Button, gGUIClose, Ok
Gui, Show, AutoSize y0 x0, Hotkeys
Return
GUIClose:
Gui, Destroy
Return
}
F10::ExitApp
F12::Pause
!r::Reload
!h::Help()
!d::delay()
!1::mouse()
!2::mouse2()
F1::punchdelay()
F2::movedelay()
F3::direction()
